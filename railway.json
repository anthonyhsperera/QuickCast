{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r requirements.txt && mkdir -p output"
  },
  "deploy": {
    "startCommand": "gunicorn --chdir backend --bind 0.0.0.0:$PORT --timeout 120 --workers 1 app:app",
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
